option_settings:
  # For ALB environments (most modern EB platforms)
  aws:elasticbeanstalk:environment:process:default:
    HealthCheckPath: /health

  # For Classic ELB environments (older EB setups)
  aws:elb:healthcheck:
    Target: HTTP:80/health
    Interval: 10
    Timeout: 5
    HealthyThreshold: 3
    UnhealthyThreshold: 5
